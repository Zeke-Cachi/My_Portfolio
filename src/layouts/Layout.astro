---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="bg-mainbg text-white font-roboto overflow-x-hidden w-screen relative md:static">
		<header class="flex justify-between items-center p-[1rem]">
			<a href="/">
				<img src="/logo.png" alt="" class="pt-[.7rem] w-[4rem] ms-[1rem]">
			</a>

			<nav class="md:me-[3rem] md:block transition-opacity opacity-0 md:opacity-100">
				<ul class="flex flex-col md:flex-row justify-start items-center md:justify-between absolute md:static w-screen h-[100%] md:w-auto md:h-auto bg-[rgba(0,0,0,.90)] md:bg-mainbg
				 top-0 left-0 md:top-auto md:left-auto z-30 pt-[8rem] md:pt-0 mt-[7.5rem] md:mt-0">
					<li class="mx-[1rem] text-[2rem] md:text-[1.2rem] my-[2rem] md:my-0 text-center relative group font-raleway transition-all hover:font-bold hover:text-primary
					md:hover:font-normal md:hover:text-white">
						<a href="/">Home</a>
						<hr class="absolute md:w-[100%] hidden group-hover:block group-hover:text-primary md:group-hover:animate-line">
					</li>

					<li class="mx-[1rem] text-[2rem] md:text-[1.2rem] my-[2rem] md:my-0 text-center relative group font-raleway transition-all hover:font-bold hover:text-primary
					md:hover:font-normal md:hover:text-white">
						<a href="/about">Sobre mi</a>
						<hr class="absolute md:w-[100%] hidden group-hover:block group-hover:text-primary md:group-hover:animate-line">
					</li>

					<li class="mx-[1rem] text-[2rem] md:text-[1.2rem] my-[2rem] md:my-0 text-center relative group font-raleway transition-all hover:font-bold hover:text-primary
					md:hover:font-normal md:hover:text-white">
						<a href="/contact">Contacto</a>
						<hr class="absolute md:w-[100%] hidden group-hover:block group-hover:text-primary md:group-hover:animate-line">
					</li>
				</ul>
			</nav>

			<button
				class="h-[4rem] mx-[1rem] md:hidden">
				<div 
					class="w-[3rem] h-[.3rem] bg-white mb-[.4rem] rounded-xl transition-all duration-700"
					id="long-line"></div>
				<div 
					class="w-[2.4rem] h-[.3rem] bg-white my-[.4rem] rounded-xl transition-all duration-700"
					id="middle-line"></div>
				<div 
					class="w-[1.9rem] h-[.3rem] bg-white mt-[.4rem] rounded-xl transition-all duration-700"
					id="short-line"></div>
			</button>

		</header>
		<hr class="text-secondary animate-headerBottom mx-auto lg:mb-[1rem] xl:mb-[3rem]">

		<slot />

		<footer class="border-t-[1px] border-t-secondary md:h-[10rem] grid grid-cols-2 lg:grid-cols-3 place-items-center p-[1rem]">
			<div>
				<h5 class="ms-[1rem] mb-[.4rem]">Página hecha por Ezequiel Cachi</h5>
				<h6 class="ms-[1rem] text-secondary text-[.9rem]">® Zeke-Cachi 2023</h6>
			</div>

			<img src="./logo.png" alt="logo del footer" class="h-[7rem] hidden lg:block">
			
			<div class="flex flex-col sm:flex-row justify-around ms-[4rem] sm:mx-[2rem] xl:px-[7rem] 2xl:px-[9rem]">
				<a href="https://www.linkedin.com/in/ezequiel-cachi-8a439b124/" target="_blank" rel="noopener noreferrer">
					<img 
					src="/socialMedia/linkedin.svg" 
					alt="linkedin logo" 
					class="h-[2rem] p-[0.3rem] sm:h-[3rem] my-[.1rem] sm:m-[.5rem] lg:mx-[1rem] bg-primary transition-all hover:p-0 cursor-pointer">
				</a>
				
				<a href="https://github.com/Zeke-Cachi" target="_blank" rel="noopener noreferrer">
					<img 
					src="/socialMedia/github.svg" 
					alt="github logo" 
					class="h-[2rem] p-[0.3rem] sm:h-[3rem] my-[.1rem] sm:m-[.5rem] lg:mx-[1rem] bg-primary transition-all hover:p-0 cursor-pointer">
				</a>

				<a href="https://stackoverflow.com/users/21198309/zeke-cachi" target="_blank" rel="noopener noreferrer">
					<img 
					src="/socialMedia/stackoverflow.svg" 
					alt="stack overflow logo" 
					class="h-[2rem] p-[0.3rem] sm:h-[3rem] my-[.1rem] sm:m-[.5rem] lg:mx-[1rem] bg-primary transition-all hover:p-0 cursor-pointer">
				</a>
			</div>

		</footer>

	</body>
</html>


<!---------- JAVASCRIPT --------------->
<script>
	let button = document.querySelector('header button');
	let navbar = document.querySelector('nav');
	let longLine = document.getElementById('long-line');
	let middleLine = document.getElementById('middle-line');
	let shortLine = document.getElementById('short-line');


	button?.addEventListener('click', (e:any)=> {
		middleLine?.classList.toggle('opacity-0');
		longLine?.classList.toggle("rotate-[-405deg]");
		longLine?.classList.toggle("translate-y-[.4rem]");
		shortLine?.classList.toggle('rotate-[405deg]');
		shortLine?.classList.toggle('translate-y-[-1rem]');
		shortLine?.classList.toggle('w-[3rem]');

		if ( navbar?.classList.contains('opacity-0') ) {
			navbar?.classList.remove('opacity-0');
			navbar?.classList.add('opacity-100');
		} else {
			navbar?.classList.remove('opacity-100');
			navbar?.classList.add('opacity-0');
		}
	})
</script>

